{
    "name": "auth-server",
    "version": "1.0.0",
    "description": "",
    "main": "app.js",
    "prisma": {
        "schema": "./lib/prisma/schema.prisma"
    },
    "scripts": {
        "lint": "npx eslint . --fix",
        "lint:check": "npx eslint .",
        "build": "npm run clean &&  tsc",
        "clean": "rm -rf dist/*",
        "start": "node dist/app.js",
        "p-init": "prisma migrate dev --name init",
        "p-gen": "prisma generate",
        "rollback": "prisma migrate resolve --rolled-back '20221121053103_add_user_in_reaction'",
        "p-mg-prod": "prisma migrate deploy",
        "dev": "nodemon src/app.ts",
        "seed": "npx tsc lib/prisma/seed.ts && node lib/prisma/seed.js && rm lib/prisma/seed.js",
        "seed:test": "npx tsc lib/prisma/test.seed.ts && node lib/prisma/test.seed.js && rm lib/prisma/test.seed.js",
        "dev:db": "docker compose -f docker-compose.local.yml up -d",
        "dev:db:down": "docker-compose -f docker-compose.local.yml down",
        "dev:redis": "docker compose -f docker-compose.local.yml up -d redis-stack",
        "prepare": "husky install"
    },
    "keywords": [],
    "author": "milon27",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "4.11.0",
        "@sentry/node": "7.45.0",
        "@sentry/tracing": "7.45.0",
        "bcryptjs": "2.4.3",
        "cors": "2.8.5",
        "date-fns": "2.29.3",
        "dotenv": "16.0.1",
        "express": "4.18.1",
        "google-auth-library": "8.7.0",
        "joi": "17.6.3",
        "jsonwebtoken": "8.5.1",
        "pino": "8.11.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "2.4.2",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jsonwebtoken": "8.5.8",
        "@types/node": "16.3.0",
        "@typescript-eslint/eslint-plugin": "5.54.0",
        "@typescript-eslint/parser": "5.54.0",
        "eslint": "8.2.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-airbnb-typescript": "17.0.0",
        "eslint-config-prettier": "8.6.0",
        "eslint-plugin-import": "2.25.3",
        "eslint-plugin-prettier": "4.2.1",
        "husky": "8.0.3",
        "nodemon": "2.0.19",
        "prettier": "2.8.4",
        "prisma": "4.11.0",
        "ts-node": "10.9.1",
        "typescript": "4.7.4"
    }
}
